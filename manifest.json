{
  "manifest_version": 3,
  "name": "StyleInsight",
  "version": "0.0.1",
  "description": "Unveil website design secrets with StyleInsight. Discover fonts, colors, and insights. Perfect for designers & developers.",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/download-icon.svg"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["images/copy-icon.svg"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["images/close-icon.svg"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
