{
  "manifest_version": 3,
  "name": "StyleInsight",
  "version": "0.0.1",
  "description": "Unveil website design secrets with StyleInsight. Discover fonts, colors, and insights. Perfect for designers & developers.",
  "author": "Ken Pan",
  "action": {
    "default_popup": "index.html",
    "default_title": "StyleInsight"
  },
  "permissions": ["tabs", "<all_urls>"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
